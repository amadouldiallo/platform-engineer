gke_version  = "1.28"
node_count   = 3           # 3 nodes pour FluxCD + infra (autoscaling d√©sactiv√©)
machine_type = "e2-medium"
disk_size_gb = 20          # ‚ö†Ô∏è Max 50GB selon org policy

